<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/papan_2"
    tools:context="ContohFinalProjectKuis">

    <ImageView
        android:id="@+id/bendera"
        android:paddingTop="15dp"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/quiz_game" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bendera"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:paddingRight="15dp"
            android:id="@+id/linePilGan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bendera"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/quizz" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="kuis Pilihan Ganda"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="15dp"
            android:id="@+id/lineEssay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bendera"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/quizz" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kuis Essay"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>